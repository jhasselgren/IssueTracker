doctype html
html
	include head.jade

	body
		
		include nav.jade
		
		.container
			
			.row
				.col-xs-12.col-sm-12.col-md-12.col-lg-12
					.panel.panel-default
						.panel-body
							.row
								.col-lg-12
									form(class="form-horizontal")
										fieldset
											legend Update Action
											.form-group
												label.col-lg-2.control-label Description
												.col-lg-10
													textarea(rows="10").form-control
											.form-group
												label.col-lg-2.control-label Deadline
												.col-lg-10
													input(type="text").form-control
											.form-group
												label.col-lg-2.control-label Completed
												.col-lg-10
													input(type="text").form-control
											.form-group
												label.col-lg-2.control-label Status
												.col-lg-10
													select.form-control
														option New
														option Ongoing
														option Completed
							.row
								.col-lg-12
									.pull-right
										button(type="button").btn.btn-default Save
										button(type="button").btn.btn-default Cancel
			
			

		script(src="bower_components/angular/angular.js")
		script(src="bower_components/angular-route/angular-route.js")
		script(src="app.js")